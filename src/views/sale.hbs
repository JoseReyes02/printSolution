	<section class="bg0 p-t-23 p-b-140" id="listProducts">
		<div class="container">
			<div class="p-b-10" style="text-align: center;">
				<h2 class="text-center mb-4">All products</h2>
			</div>

			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
						All
					</button>

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".women">
						HP
					</button>

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".men">
						Brother
					</button>

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".bag">
						Canon
					</button>

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".shoes">
						Samsung
					</button>

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".watches">
						Watches
					</button>
				</div>

				<div class="flex-w flex-c-m m-tb-10">


					<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
						<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
						<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						Search
					</div>
				</div>

				<!-- Search product -->
				<div class="dis-none panel-search w-full p-t-10 p-b-15">
					<div class="bor8 dis-flex p-l-15">
						<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
							<i class="zmdi zmdi-search"></i>
						</button>

						<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product"
							placeholder="Search">
					</div>
				</div>


			</div>

			<div class="row isotope-grid" >
				{{#each productos}}
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
					<!-- Block2 -->

					<div class="block2">
						<div class="block2-pic hov-img0">
							{{!-- //CARROUSEL --}}
							{{!-- <p class="m-2">{{titulo}}</p> --}}
							<div id="carouselExampleControls{{@index}}" class="carousel slide" data-ride="carousel">

								<ol class="carousel-indicators">
									{{#each image}}
									<li data-target="#carousel{{@index}}" data-slide-to="{{@index}}" {{#if
										@first}}class="active" {{/if}}>
									</li>
									{{/each}}
								</ol>
								<div class="carousel-inner" style="height: 100%;">
									{{#each image}}
									<div class="carousel-item {{#if @first}}active{{/if}}">
										<img src="{{this.urlImagen}}" alt="Imagen {{@index}}" class="img-carousel"
											style="width: 100%; height: 300px;">
									</div>
									{{/each}}
								</div>
								<a class="carousel-control-prev" href="#carouselExampleControls{{@index}}" role="button"
									data-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Previous</span>
								</a>
								<a class="carousel-control-next" href="#carouselExampleControls{{@index}}" role="button"
									data-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Next</span>
								</a>
							</div>

							
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<p>{{name}}</p>
                        
							  <label for="" style="font-weight: bold">${{price}}</label>
							</div>

							<div class="block2-txt-child2 flex-r p-t-3">
								<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
									<img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png"
										alt="ICON">
									<img class="icon-heart2 dis-block trans-04 ab-t-l"
										src="images/icons/icon-heart-02.png" alt="ICON">
								</a>
							</div>
						</div>
                        <div style="text-align: center;">
                            <button class="btn btn-success">See details</button>
                        </div>
					</div>

				</div>
				{{/each}}
			</div>

			<!-- Load more -->
			{{!-- <div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div> --}}
		</div>
	</section>