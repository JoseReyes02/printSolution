{{> header}}
<div class="mt-5"></div>
<br>
<br>

<section id="rentals" class="container my-5">
    <h2 class="text-center mb-4">Printer Rental Services</h2>

    <div class="row isotope-grid">
        {{#each machinesRentails}}
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
            <!-- Block2 -->

            <div class="block2">
                <div class="block2-pic hov-img0">
                    {{!-- //CARROUSEL --}}
                    {{!-- <p class="m-2">{{titulo}}</p> --}}
                    <div id="carouselExampleControls{{@index}}" class="carousel slide" data-ride="carousel">

                        <ol class="carousel-indicators">
                            {{#each image}}
                            <li data-target="#carousel{{@index}}" data-slide-to="{{@index}}" {{#if
                                @first}}class="active" {{/if}}>
                            </li>
                            {{/each}}
                        </ol>
                        <div class="carousel-inner" style="height: 100%;">
                            {{#each image}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <img src="{{this.urlImagen}}" alt="Imagen {{@index}}" class="img-carousel"
                                    style="width: 100%; height: 300px;">
                            </div>
                            {{/each}}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls{{@index}}" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls{{@index}}" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

             
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            {{name}}
                        </a>

                        <span class="stext-105 cl3">
                            ${{price}}
                        </span>
                    </div>

            
                </div>
                      <div style="text-align: center;">
                                  <button class="btn btn-primary"
                        onclick="verDetalles('{{_id}}')">
                        See details
                    </button>

                      </div>
             
            </div>

        </div>
        {{/each}}
    </div>
</section>