

{{> header}}


<section id="servicios" class="container my-5">
  <h2 class="text-center mb-4">Nuestros Servicios</h2>
  <div class="row">

    <!-- Venta -->
    <div class="col-md-4">
      <div class="card h-100 text-center">
        <img src="https://via.placeholder.com/300x200?text=Venta+de+Impresoras" class="card-img-top" alt="Venta de impresoras">
        <div class="card-body">
          <h5 class="card-title">Venta de Impresoras</h5>
          <p class="card-text">Ofrecemos impresoras nuevas y reacondicionadas de alta calidad, con garantía y soporte técnico.</p>
          <a href="#contacto" class="btn btn-primary">Solicitar servicio</a>
        </div>
      </div>
    </div>

    <!-- Alquiler -->
    <div class="col-md-4">
      <div class="card h-100 text-center">
        <img src="https://via.placeholder.com/300x200?text=Alquiler+de+Impresoras" class="card-img-top" alt="Alquiler de impresoras">
        <div class="card-body">
          <h5 class="card-title">Alquiler de Impresoras</h5>
          <p class="card-text">Planes flexibles para empresas y eventos. Nos encargamos de la instalación, mantenimiento y soporte.</p>
          <a href="#contacto" class="btn btn-primary">Solicitar servicio</a>
        </div>
      </div>
    </div>

    <!-- Reparación -->
    <div class="col-md-4">
      <div class="card h-100 text-center">
        <img src="https://via.placeholder.com/300x200?text=Reparacion+de+Impresoras" class="card-img-top" alt="Reparación de impresoras">
        <div class="card-body">
          <h5 class="card-title">Reparación de Impresoras</h5>
          <p class="card-text">Soluciones rápidas y efectivas. Técnicos especializados en múltiples marcas y modelos.</p>
          <a href="#contacto" class="btn btn-primary">Solicitar servicio</a>
        </div>
      </div>
    </div>

  </div>
</section>
